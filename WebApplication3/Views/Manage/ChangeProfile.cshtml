@model Logik.Profiles
<div id="Huvudfonster" class="col-md-8" style="margin-bottom: 10px; align-items:center">
    @{
        ViewBag.Title = "Manage Profile";
    }

    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("ChangeProfile", "Manage", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <h4>Manage Profile Settings</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label(Logik.Languages.Resources.Description, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label(Logik.Languages.Resources.AllowSearch, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.CheckBoxFor(m => m.AllowSearch, new { @class = "form-check-input" })
            </div>
        </div>

        <div class="form-group">            
            <div class="col-sm-10">
                <input type="file" name="upload" />
            </div>
        </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="margin-top: 15px;">
                    <input type="submit" class="btn btn-default" value="Save" />
                </div>

            </div>
            }

        </div>
 
 @Scripts.Render("~/bundles/jqueryval")
 @Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryui")
<script type="text/javascript">
</script>
