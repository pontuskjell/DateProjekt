@model Logik.Messages

@{
    ViewBag.Title = "Create";
}
<div id="Huvudfonster" class="col-md-8" style="margin-bottom: 10px; align-items:center">
    @Html.HiddenFor(model => model.ProfileReceiver)
    @using (Html.BeginForm("Create", "Posts", null, FormMethod.Post, new { enctype = "multipart/form-data", Id = "Form-id" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Message</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control", id = "mID" } })
                    @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.Label("Image", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="upload" id="picture" />
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input id="cbtn" type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryui")
