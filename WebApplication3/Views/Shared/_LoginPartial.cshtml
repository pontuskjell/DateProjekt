@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{

    <div class="navbar navbar-nav navbar-left"> 
    <div class="container">
        <div class="navbar-header">
            @Html.ActionLink("Profile", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
    </div>
</div>

    using (Html.BeginForm("Index", "Search", FormMethod.Post, new { id = "Search", @class = "navbar-right", style = "margin-top: 10px; margin-left:10px" }))
    {
        @Html.AntiForgeryToken()
        @Html.TextBox("SearchString")
        <input type="submit" value="Search" class="btn btn-default btn-sm" />
    }

    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Categorize contacts", "OrderContacts", "Friend")</li>
            <li>@{Html.RenderAction("RequestNumbers", "Friend");}</li>
            <li>@Html.ActionLink("Settings", "Index", "Manage")</li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(Logik.Languages.Resources.Register, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink(Logik.Languages.Resources.LogIn, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
